services:
  {{ project_name }}-landing-{{ project_stage }}:
    image: ${{ project_name | upper }}_LANDING_REGISTRY_URL:${{ project_name | upper }}_LANDING_VERSION
    container_name: {{ project_name }}-landing-{{ project_stage }}
    restart: unless-stopped
    depends_on:
      {{ project_name }}-backend-{{ project_stage }}:
        condition: service_healthy
    environment:
      - TZ=America/Lima
    env_file:
      - .env.landing
    networks:
      - traefik3_proxy
      - {{ project_name }}-network-{{ project_stage}}
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.{{ project_name }}-landing-{{ project_stage}}.rule=Host(`{{ project_name }}-landing-{{ project_stage }}.acide.win`)"
      - "traefik.http.routers.{{ project_name }}-landing-{{ project_stage}}.entrypoints=websecure"
      - "traefik.http.routers.{{ project_name }}-landing-{{ project_stage}}.tls=true"
      - "traefik.http.routers.{{ project_name }}-landing-{{ project_stage}}.tls.certresolver=dns-cloudflare"
      - "traefik.http.routers.{{ project_name }}-landing-{{ project_stage}}.tls.domains[0].main=acide.win"
      - "traefik.http.routers.{{ project_name }}-landing-{{ project_stage}}.tls.domains[0].sans=*.acide.win"
      - "traefik.http.services.{{ project_name }}-landing-{{ project_stage}}.loadbalancer.server.port=3000"
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:3000 || exit 1"]
      interval: 5s
      timeout: 5s
      retries: 2
      start_period: 5s

